<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="4dp"
    android:background="#8d8d8d"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_NoCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="001"
        android:textSize="18sp"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/img_Nike"
        android:layout_width="100dp"
        android:layout_height="130dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_NoCount"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_Type_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nike Superfly 6 \nElite FG"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/img_Nike"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$799"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txt_Type_Name"
        app:layout_constraintLeft_toLeftOf="@id/txt_Type_Name"/>

    <ImageView
        android:id="@+id/icon_cart"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_commerce_and_shopping"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="18dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>